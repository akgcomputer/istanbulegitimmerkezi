---
import { siteConfig } from '../data/siteConfig';

const { courseTitle } = Astro.props;
const defaultMsg = "Bilgi almak istiyorum.";
const message = courseTitle ? `${courseTitle} dersi hakkında bilgi almak istiyorum.` : defaultMsg;
const whatsappUrl = `https://wa.me/${siteConfig.whatsapp}?text=${encodeURIComponent(message)}`;
const telUrl = `tel:${siteConfig.phone}`;
---

<div class="flex flex-wrap gap-4 my-6">


            <a 
              href="/derse-kaydol"
              class="inline-flex items-center bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-lg transition-all shadow-md hover:shadow-lg"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              Derse Kaydol
            </a>

  <a 
    href={whatsappUrl} 
    target="_blank" 
    rel="noopener noreferrer"
    class="inline-flex items-center bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-lg transition"
  >
    <!-- WhatsApp ikonu (svg) -->
    <svg class="w-7 h-7 mr-2" fill="currentColor" viewBox="0 0 24 24">
      <path d="M12.031 6.172c-3.181 0-5.767 2.586-5.768 5.766-.001 1.298.38 2.27 1.019 3.287l-.582 2.128 2.182-.573c.978.58 1.911.928 3.145.929 3.178 0 5.767-2.587 5.768-5.766.001-3.187-2.575-5.77-5.764-5.771zm3.392 8.244c-.144.405-.837.774-1.17.824-.299.045-.677.063-1.092-.069-.252-.08-.575-.187-.988-.365-1.739-.751-2.874-2.502-2.961-2.617-.087-.116-.708-.94-.708-1.793s.45-1.272.61-1.447c.159-.175.347-.219.463-.219.116 0 .232.002.334.012.108.01.252-.04.394.304.141.346.481 1.196.523 1.282.042.087.071.188.014.304-.056.116-.084.188-.168.289-.084.101-.177.225-.253.302-.084.087-.172.181-.074.354.098.173.436.718.936 1.162.643.572 1.186.749 1.354.83.168.082.267.069.366-.042.098-.111.435-.507.55-.681.116-.173.232-.144.39-.086.159.058 1.007.475 1.18.562.174.087.29.13.333.202.044.072.044.418-.101.823z"/>
    </svg>
    WhatsApp'tan Bilgi Al
  </a>
  <a 
    href={telUrl} 
    class="inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition"
  >
    <!-- Telefon ikonu -->
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
    </svg>
    Bizi Arayın
  </a>
</div>