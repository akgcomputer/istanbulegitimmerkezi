const allInstructorsWithCourses = [
  ...bilisimCourses,
  ...dilCourses,
  ...ilkogretimCourses,
  ...sporCourses,
  ...sanatCourses,
  ...sinavCourses,
  ...digerCourses
].flatMap(course => 
  course.instructors.map(instructor => ({
    ...instructor,
    courseTitle: course.title,
    courseSlug: course.slug,
    courseCategory: course.category,
    coursePrivatePrice: instructor.privatePrice,
  }))
);

// EÄŸitmenleri benzersiz yap (slug bazÄ±nda)
const instructorMap = new Map();
allInstructorsWithCourses.forEach(item => {
  const key = item.slug;
  if (instructorMap.has(key)) {
    const existing = instructorMap.get(key);
    existing.courses.push({
      title: item.courseTitle,
      slug: item.courseSlug,
      privatePrice: item.coursePrivatePrice,
    });
  } else {
    instructorMap.set(key, {
      slug: item.slug,
      name: item.name,
      since: item.since,
      rating: item.rating,
      location: item.location,
      specialties: item.specialties || [],
      corporate: item.corporate,
      online: item.online,
      bio: item.bio,
      avatar: item.avatar,
      courses: [{
        title: item.courseTitle,
        slug: item.courseSlug,
        privatePrice: item.coursePrivatePrice,
      }]
    });
  }
});

const allInstructors = Array.from(instructorMap.values());

// Rastgele bir eÄŸitmen seÃ§ (haftanÄ±n en Ã§ok tercih edileni)
const randomIndex = Math.floor(Math.random() * allInstructors.length);
const weeklyInstructor = allInstructors[randomIndex];

