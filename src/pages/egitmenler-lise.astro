<script>
  // Filtreleme fonksiyonu
  function filterInstructors() {
    const selectedCourse = document.getElementById('filter-course').value;
    const selectedLocation = document.getElementById('filter-location').value;
    const selectedSpecialty = document.getElementById('filter-specialty').value;
    const maxPrice = parseInt(document.getElementById('filter-price').value);
    const corporateOnly = document.getElementById('filter-corporate').checked;
    const onlineOnly = document.getElementById('filter-online').checked;

    const cards = document.querySelectorAll('.instructor-card');
    
    cards.forEach(card => {
      let show = true;
      
      // Ders filtresi
      if (selectedCourse !== 'all') {
        const courses = card.dataset.course.split('||');
        if (!courses.includes(selectedCourse)) show = false;
      }
      
      // Lokasyon filtresi
      if (show && selectedLocation !== 'all' && card.dataset.location !== selectedLocation) show = false;
      
      // UzmanlÄ±k filtresi
      if (show && selectedSpecialty !== 'all') {
        const specialties = card.dataset.specialties.split('||');
        if (!specialties.includes(selectedSpecialty)) show = false;
      }
      
      // Fiyat filtresi
      if (show && parseInt(card.dataset.price) > maxPrice) show = false;
      
      // Kurumsal filtresi
      if (show && corporateOnly && card.dataset.corporate !== 'true') show = false;
      
      // Online filtresi
      if (show && onlineOnly && card.dataset.online !== 'true') show = false;
      
      card.style.display = show ? '' : 'none';
    });
  }

  // Fiyat gÃ¶stergesini gÃ¼ncelle
  document.getElementById('filter-price').addEventListener('input', function(e) {
    document.getElementById('price-value').textContent = e.target.value + 'â‚º';
    filterInstructors();
  });

  // DiÄŸer filtreler iÃ§in event listener
  document.getElementById('filter-course').addEventListener('change', filterInstructors);
  document.getElementById('filter-location').addEventListener('change', filterInstructors);
  document.getElementById('filter-specialty').addEventListener('change', filterInstructors);
  document.getElementById('filter-corporate').addEventListener('change', filterInstructors);
  document.getElementById('filter-online').addEventListener('change', filterInstructors);

  // GÃ¶rÃ¼nÃ¼m deÄŸiÅŸtirme (grid/liste)
  const gridBtn = document.getElementById('grid-view-btn');
  const listBtn = document.getElementById('list-view-btn');
  const gridView = document.getElementById('instructor-grid');
  const listView = document.getElementById('instructor-list');

  gridBtn.addEventListener('click', () => {
    gridView.classList.remove('hidden');
    listView.classList.add('hidden');
    gridBtn.classList.add('bg-indigo-100', 'text-indigo-700');
    gridBtn.classList.remove('bg-gray-100', 'text-gray-700');
    listBtn.classList.remove('bg-indigo-100', 'text-indigo-700');
    listBtn.classList.add('bg-gray-100', 'text-gray-700');
  });

  listBtn.addEventListener('click', () => {
    gridView.classList.add('hidden');
    listView.classList.remove('hidden');
    listBtn.classList.add('bg-indigo-100', 'text-indigo-700');
    listBtn.classList.remove('bg-gray-100', 'text-gray-700');
    gridBtn.classList.remove('bg-indigo-100', 'text-indigo-700');
    gridBtn.classList.add('bg-gray-100', 'text-gray-700');
  });
</script>