import Layout from '../layouts/Layout.astro';
import { courses } from '../data/courses-lise';

// TÃ¼m eÄŸitmenleri topla, her eÄŸitmenin verdiÄŸi dersleri ve o dersteki Ã¼creti ile birlikte
const allInstructorsWithCourses = courses.flatMap(course => 
  course.instructors.map(instructor => ({
    ...instructor,
    courseTitle: course.title,
    courseSlug: course.slug,
    courseCategory: course.category,
    coursePrivatePrice: instructor.privatePrice, // Bu dersteki Ã¶zel ders Ã¼creti
    courseGroupPrice: instructor.groupPrice,
  }))
);

// EÄŸitmenleri benzersiz yap ve her eÄŸitmenin verdiÄŸi dersleri listele
const instructorMap = new Map();
allInstructorsWithCourses.forEach(item => {
  const key = item.slug;
  if (instructorMap.has(key)) {
    // AynÄ± eÄŸitmen varsa ders listesine ekle
    const existing = instructorMap.get(key);
    existing.courses.push({
      title: item.courseTitle,
      slug: item.courseSlug,
      privatePrice: item.coursePrivatePrice,
      groupPrice: item.courseGroupPrice,
    });
  } else {
    // Yeni eÄŸitmen
    instructorMap.set(key, {
      slug: item.slug,
      name: item.name,
      since: item.since,
      rating: item.rating,
      location: item.location,
      specialties: item.specialties || [],
      corporate: item.corporate,
      online: item.online,
      bio: item.bio,
      avatar: item.avatar,
      courses: [{
        title: item.courseTitle,
        slug: item.courseSlug,
        privatePrice: item.coursePrivatePrice,
        groupPrice: item.courseGroupPrice,
      }]
    });
  }
});

const uniqueInstructors = Array.from(instructorMap.values());


// Lokasyon listesini "Online" Ã¶nde olacak ÅŸekilde sÄ±rala
const locations = [...new Set(uniqueInstructors.map(i => i.location))].sort((a, b) => {
  if (a === "Online") return -1;
  if (b === "Online") return 1;
  return a.localeCompare(b);
});


const allSpecialties = [...new Set(uniqueInstructors.flatMap(i => i.specialties || []))].sort();
const courseTitles = [...new Set(uniqueInstructors.flatMap(i => i.courses.map(c => c.title)))].sort();

// Fiyat aralÄ±klarÄ± iÃ§in min ve max
const allPrices = uniqueInstructors.flatMap(i => i.courses.map(c => c.privatePrice));
const minPrice = Math.min(...allPrices);
const maxPrice = Math.max(...allPrices);
